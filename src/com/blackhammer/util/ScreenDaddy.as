package com.blackhammer.util{		import com.blackhammer.game.*	import flash.display.*;	import flash.media.*;		public class ScreenDaddy extends Sprite{			private var _screenList:Array;		public var _currentScreen:* = null;				public function ScreenDaddy(screenList:Array):void{			_screenList = screenList;			}				public function NavigateScreen(daScreen:String):void{				if (_currentScreen != null){					_currentScreen.Kill();					removeChild(_currentScreen);					_currentScreen = null;				}				var daIndex = _screenList.indexOf(daScreen);				//trace("_screenList:",_screenList,"daScreen:",daScreen,"daIndex:",daIndex);			switch (daIndex) {				case 0:					_currentScreen = new SplashScreen(this);					break;				case 1:					_currentScreen = new GameScreen(this);					break;				case 2:					_currentScreen = new ToolScreen(this);					break;				case 3://					_currentScreen = new InfoScreen(this);					break;				case 4:		//			_currentScreen = new HelpScreen(this);					break;					default:        			trace("ScreenDaddy Navigate Error: not a screen:", daScreen);			}			trace("ScreenDaddy going to ", daScreen); 			if (_currentScreen is Object) {				addChild(_currentScreen);			} else {				trace("ScreenDaddy Error: _currentScreen is not an object");			}				}	}}