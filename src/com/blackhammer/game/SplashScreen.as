package com.blackhammer.game{		import com.blackhammer.util.*	import flash.events.*;	import flash.utils.Timer;	import flash.display.*;	import flash.media.*;	import flash.net.URLRequest;	import fl.transitions.Tween;	import fl.transitions.easing.*;		 import com.greensock.*;	 import com.greensock.loading.*;	 import com.greensock.events.LoaderEvent;	 import com.greensock.loading.display.*;	public class SplashScreen extends Sprite {		private var _timer:Timer = new Timer(12000);		private var _ScreenDaddy:ScreenDaddy;		////private var _loader:Loader = new Loader();		////[Embed(source="../assets/googooeyeballs.swf")]        //// private var _splashSwf:Class;				private var _splash:MovieClip = new splash_MC();		private var _playButton = new play_button(); //why does Button type not work. What is imported?				private var _splashSound:Sound = new splash_snd();		private var _rollSnd:Sound= new mouseRoll_snd();				public function SplashScreen(screenDaddy):void{			_ScreenDaddy = screenDaddy;			addChild(_splash);			_splash.x = 160;			_splash.y = 240;			this.addEventListener(Event.ADDED_TO_STAGE, OnTheStage, false, 0, true);			//alternate loader method			//var loader:SWFLoader = new SWFLoader("../assets/splash_anim.swf", {name:"splash_anim", container:this, x:0, y:0, onInit:initHandler, estimatedBytes:9500}); 			//begin loading 			//loader.load();						///_loader.load(new URLRequest("../assets/googooeyeballs.swf"));			//_loader.contentLoaderInfo.addEventListener(Event.COMPLETE,onLoaded, false, 0 , true);		}				 function initHandler(event:LoaderEvent):void {  ///			 stage.frameRate = 12;  			addChild(_playButton);			_playButton.x = 95;			_playButton.y = 373;			_splashSound.play();						_timer.addEventListener(TimerEvent.TIMER, timesUp);			_timer.start();			this.addEventListener(MouseEvent.MOUSE_UP,onMouseUpEvent, false, 0, true);			_playButton.addEventListener(MouseEvent.MOUSE_UP,onMouseUpButtonEvent, false, 0, true);    			 		}				function OnTheStage(e:Event):void{			stage.frameRate = 12;  			addChild(_playButton);			_playButton.x = 95;			_playButton.y = 370;			_splashSound.play();						_timer.addEventListener(TimerEvent.TIMER, timesUp);			_timer.start();			///this.addEventListener(MouseEvent.MOUSE_UP,onMouseUpEvent, false, 0, true);			_playButton.addEventListener(MouseEvent.MOUSE_UP,onMouseUpButtonEvent, false, 0, true);		}				//private function onLoaded(evt:Event):void{			//addChild(evt.target.content);			//_loader.y = 2;			//addChild(_loader);		//}				private function onMouseUpEvent(e:Event):void{			if (e.target != _playButton){				_rollSnd.play();				this.removeEventListener(MouseEvent.MOUSE_UP, onMouseUpEvent);				_timer.stop();				this.timesUp(e);				//_ScreenDaddy.NavigateScreen("GameScreen");			}		}				private function onMouseUpButtonEvent(e:Event):void{			_rollSnd.play();			//_playButton.gotoAndStop(2);			_playButton.removeEventListener(MouseEvent.MOUSE_UP, onMouseUpButtonEvent);			_timer.stop();			this.timesUp(e);			//_ScreenDaddy.NavigateScreen("GameScreen");		}						 private function timesUp(evt):void {           _ScreenDaddy.NavigateScreen("GameScreen");		   //this.Kill();        }				 public function Kill():void {           _timer.removeEventListener(TimerEvent.TIMER, timesUp);		  removeChild(_splash) 		  _splash = null;		   		  /// _updateTimer.removeEventListener(TimerEvent.TIMER, Update);		 //removeChild(_loader);		  //_loader = null;        }		}}