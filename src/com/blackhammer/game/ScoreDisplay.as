package com.blackhammer.game{		import flash.text.*;	import flash.display.*;	import flash.display.MovieClip;	import flash.events.Event;	import flash.display.Graphics;		public class ScoreDisplay extends MovieClip { 				public var _displayField:TextField  = new TextField();		private var _format:TextFormat = new TextFormat(); //"Verdana"		public var _myX:Number; // = 232;		private var _myY:Number; // = 48; //85;//42;				public function ScoreDisplay (myX:Number = 126, myY:Number = 51, fontSize:Number = 18):void{			_myX = myX;			_myY = myY;			//Font.registerFont(verdana_embed); //didn't work in CS4, might be CS5.			_displayField.width = 50;			_displayField.x = _myX; 			_displayField.y = _myY;			_displayField.multiline = _displayField.wordWrap = false;			_displayField.autoSize = TextFieldAutoSize.CENTER;			_displayField.type = TextFieldType.DYNAMIC;						var customFont:Font = new Helvetica_embed(); //verdana_embed();  			_format.font = customFont.fontName;            //_format.font = "Verdana";			_format.bold = true;            _format.color = 0x66FF33;            _format.size = fontSize;            _format.underline = false;            _displayField.defaultTextFormat = _format;			_displayField.embedFonts = true; 			_displayField.text = String(0);						///use border for placement testing			//_displayField.border = true;			//_displayField.borderColor = 0x990000;						addChild(_displayField);			//_displayField.rotation = 10;			}			public function Display(daNum):void{			_displayField.text = String(daNum);		}			public function Kill():void{			removeChild(_displayField);			_displayField = null;		}		}}