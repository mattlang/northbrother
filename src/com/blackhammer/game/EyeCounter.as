package com.blackhammer.game{		import flash.display.*		public class EyeCounter extends MovieClip{			private var _numOfRounds:uint;		private var _startX:Number;		private var _myY:Number;		private var _daSpace:Number = 30;//27;		private var _counterArray:Array = [];		private var _myDaddy:Object;		private var _eyeballCount:uint = 0;				public function EyeCounter(myDaddy:Object,myY:Number = 399):void{			_myDaddy = myDaddy;			_myY = myY;			//this.ResetCounter(5);		}		public function ResetCounter(numOfRounds:Number):void {			_numOfRounds = numOfRounds;			_eyeballCount = 0;			if (_counterArray.length >0){				for(var i:int = 0; i < _counterArray.length; i++){					removeChild(_counterArray[i]);					_counterArray[i] = null;					//_counterArray.splice(i,1);				}			}			_counterArray = []; //just incase			//_startX = (320 - (_numOfRounds*_daSpace))/2;			_startX = 124+(180 - (_numOfRounds*_daSpace))/2;			//_startX = 147;			for(var ii:int = 0; ii < _numOfRounds; ii++){				_counterArray.push(new counter_MC());				_counterArray[ii].x = _startX + (ii * _daSpace);				_counterArray[ii].y = _myY;				//_counterArray[ii].rotation = Math.random()*270;				_counterArray[ii].stop();				addChild(_counterArray[ii]);			}		}				public function AddCounter() {			_eyeballCount ++;			_counterArray[_eyeballCount -1].gotoAndStop(2);			//trace("_eyeballCount", _eyeballCount);			//trace("_counterArray[_eyeballCount -1]", _counterArray[_eyeballCount -1]);			if (_eyeballCount == _numOfRounds){				//_myDaddy.GameOver()				return true			} else {				return false			}		}				public function get eyballCount():int{			return _eyeballCount;		}				public function Kill():void{			var arraysize:Number = _counterArray.length;			for (var i:int = 0; i < arraysize; i++){				removeChild(_counterArray[i]);				_counterArray[i] = null;			}			_counterArray = [];		}				}	}