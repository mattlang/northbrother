package com.blackhammer.game {			import flash.media.*;	import flash.display.*	import flash.geom.*;	import flash.events.*;		import com.greensock.*;	//import com.greensock.easing.*;	//import com.greensock.OverwriteManager;		public class Interstitial extends Sprite{			private var _bigRedEye:MovieClip = new big_red_eyeball();				private var _scaleMultiplier:Number = 3.0;		private var _scaleCounter:int = 0;		private var _scaleTime:Number = 1.0*24;				public function Interstitial (){			//this.transform.matrix = new Matrix(1, 0, 0, 1, -(_bigRedEye.width /2), -(_bigRedEye.width/2) );			_bigRedEye.transform.matrix = new Matrix(1, 0, 0, 1, -(_bigRedEye.width/2), -(_bigRedEye.height/2) );			//_bigRedEye.alpha = 0;			//_bigRedEye.x = 160;//stage.width/2;			//_bigRedEye.y = 240;//stage.height/2;			x = 161.5;			y = 236;			}			public function playAnim():void{			addChild(_bigRedEye);			_bigRedEye.alpha = 1;			//_bigRedEye.scaleX = 1.0;			//_bigRedEye.scaleY = 1.0;			this.alpha = 0;			this.scaleX = 0.5;			this.scaleY = 0.5;			//_scaleCounter = 0;			//addEventListener(Event.ENTER_FRAME, onEnterFrameEvent, false, 0, true);			var anim:TweenLite = new TweenLite(this, 1.5, {delay:.5,alpha:1,scaleX:1.5,scaleY:1.5,onComplete:FinishTween1});			//anim.play();					}				private function onEnterFrameEvent(e:Event):void{			var scaleAmount = _scaleMultiplier * _scaleCounter/_scaleTime						_bigRedEye.alpha = _scaleCounter/_scaleTime; 			_bigRedEye.scaleX = scaleAmount; 			_bigRedEye.scaleY = scaleAmount; 			_scaleCounter ++;						if (this.alpha >= 1.0){				this.alpha = 1.0;				removeEventListener(Event.ENTER_FRAME, onEnterFrameEvent);				var anim:TweenLite = new TweenLite(this, .8, {alpha:0.0,onComplete:FinishTween1});				//anim.play();				//removeChild(_solutionsShape);				//_solutionsShape = new Sprite()			}					}				private function FinishTween1():void{			var anim:TweenLite = new TweenLite(this, 1, {alpha:0.0,scaleX:0.5,scaleY:0.5,onComplete:FinishTween2});			//anim.play();					}				private function FinishTween2():void{			removeChild(_bigRedEye);					}				}	}