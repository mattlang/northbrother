package com.blackhammer.game{		import com.blackhammer.util.*	import flash.events.*;	import flash.utils.Timer;	import flash.display.*;	import flash.media.*;	import flash.net.URLRequest;	import fl.transitions.Tween;	import fl.transitions.easing.*;		public class HelpScreen extends Sprite {				private var _ScreenParent:Object;		private var _helpScreen:MovieClip = new help_mc();		private var _backButton = new back_button(); //why does Button type not work. What is imported?		private var _nextButton = new help_next();  //help_prev(); //new hand_button_next();		private var _previousButton = new help_prev();		private var _mouseUpSnd:Sound= new placeObject_snd();				public function HelpScreen(screenParent):void{			_ScreenParent = screenParent;			addChild(_helpScreen);			_helpScreen.x = 160;			_helpScreen.y = 240;			_helpScreen.gotoAndStop(1);			addChild(_backButton);			_backButton.x = 122;			_backButton.y =  446;			_backButton.addEventListener(MouseEvent.MOUSE_UP,onMouseUpBackEvent, false, 0, true);			addChild(_previousButton);			_previousButton.x = 215;			_previousButton.y = 445;			_previousButton.addEventListener(MouseEvent.MOUSE_DOWN,onMouseUpPreviousEvent, false, 0, true);			addChild(_nextButton);			//_nextButton.rotation = 180;			_nextButton.x = 268; ///314;			_nextButton.y =  445; //472;			_nextButton.addEventListener(MouseEvent.MOUSE_DOWN,onMouseUpNextEvent, false, 0, true);								}				private function onMouseUpBackEvent(e:Event):void{			_mouseUpSnd.play();						_backButton.removeEventListener(MouseEvent.MOUSE_UP, onMouseUpBackEvent);			this.RemoveModal();			//_ScreenParent.NavigateScreen("GameScreen");		}				private function onMouseUpNextEvent(e:Event):void{			_mouseUpSnd.play();			_helpScreen.gotoAndStop(_helpScreen.currentFrame+1)		}				private function onMouseUpPreviousEvent(e:Event):void{			_mouseUpSnd.play();			_helpScreen.gotoAndStop(_helpScreen.currentFrame-1)		}				public function RemoveModal():void{			removeChild(_helpScreen);			removeChild(_backButton);			removeChild(_nextButton);			removeChild(_previousButton);			//trace(_ScreenParent);			_ScreenParent.RemoveHelpModal();					}				public function Kill():void{			removeChild(_helpScreen);			removeChild(_backButton);			removeChild(_nextButton);			removeChild(_previousButton);					}			}	}